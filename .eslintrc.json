{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "rules": {
        "no-console": 1,
        "indent": [2,"tab"],
        "quotes":[2,"double","avoid-escape"],
        "linebreak-style": [2,"unix"],
        "semi": [2,"always"]
    }
}